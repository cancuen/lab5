<h1>Listing inventories</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Product</th>
    <th>Previous balance</th>
    <th>New balance</th>
    <th>Future balance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inventories.each do |inventory| %>
  <tr>
    <td><%= inventory.id %></td>
    <td><%= inventory.product_id %></td>
    <td><%= inventory.previous_balance %></td>
    <td><%= inventory.new_balance %></td>
    <td><%= inventory.future_balance %></td>
    <td><%= link_to 'Show', inventory %></td>
    <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
    <td><%= link_to 'Destroy', inventory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

